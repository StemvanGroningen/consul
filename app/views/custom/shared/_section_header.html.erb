<div class="help-header no-margin-top margin-bottom">
  <div class="row">
    <div class="small-12 column" data-magellan>
      <span class="icon <%= "#{image}" %>"></span>
      <h1 class="inline-block"><%= t("#{i18n_namespace}.title") %></h1>
    </div>
  </div>
  <div class="row collapse">
    <div class="small-12 column">
      <div class="small-12 medium-8 column">
        <p>
          <% if namespace == "legislation" %>
            <%= sanitize(t("#{i18n_namespace}.description",
                            link: link_to(t("#{i18n_namespace}.description_link"), budgets_path))) %>
          <% else %>
            <%= t("#{i18n_namespace}.description") %>
          <% end %>
        </p>
      </div>
      <div class="small-12 medium-4 column text-right">
        <%= link_to t("#{i18n_namespace}.help"), "#section_help" %>
      </div>
    </div>
  </div>
</div>
