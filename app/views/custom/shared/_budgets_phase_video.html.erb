<% if budget.name == "Groene Parel" && phases.first == phase %>
  <div style="padding:56.25% 0 0 0;position:relative;">
    <iframe src="https://player.vimeo.com/video/456899778?title=0&byline=0&portrait=0"
            style="position:absolute;top:0;left:0;width:100%;height:100%;border:0;"
            allow="autoplay; fullscreen" allowfullscreen></iframe>
  </div>
  <script src="https://player.vimeo.com/api/player.js"></script>
<% elsif budget.name == "Stem van Ten Boer" && phase == phases.first ||
         budget.name == "Stem van Ten Boer" && phase == phases.second %>
  <div style="padding:56.25% 0 0 0;position:relative;">
    <iframe src="https://player.vimeo.com/video/536818031?title=0&byline=0&portrait=0"
            style="position:absolute;top:0;left:0;width:100%;height:100%;border:0;"
            allow="autoplay; fullscreen" allowfullscreen></iframe>
  </div>
  <script src="https://player.vimeo.com/api/player.js"></script>
<% elsif budget.name == "Kinderdromen Durven Doen" && phase == phases.second %>
  <iframe width="560" height="315" src="https://www.youtube.com/embed/6PqVaONDC_s"
          title="YouTube video player" frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen></iframe>
<% elsif phase.image.present? %>
  <%= link_to phase.image.variant(:large), target: "_blank" do %>
    <%= image_tag phase.image.variant(:large),
                  title: phase.image.title.unicode_normalize,
                  alt: phase.image.title.unicode_normalize %>
  <% end %>
<% end %>
