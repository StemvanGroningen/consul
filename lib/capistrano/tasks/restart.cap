namespace :deploy do
  desc "Restart Unicorn"
  task :restart do
    on roles(:app) do
      execute "sudo kill -QUIT `cat /home/deploy/consul/pids/unicorn.pid`; true"
      execute "sudo kill -QUIT `cat /home/deploy/consul/shared/pids/unicorn.pid`; true"
      execute "cd /home/deploy/consul/current && /home/deploy/.rvm/gems/ruby-2.3.8/wrappers/unicorn -c config/unicorn.rb -E #{fetch(:rails_env)} -D"
    end
  end
end
